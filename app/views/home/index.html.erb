<!DOCTYPE html>
<html>
<head>
  <!-- Include your CSS and JavaScript here -->
  <title>Job Seeker - CareerConnect</title>
  
  <!-- Add your CSS and JavaScript links or references here -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  
  <!-- Add Bootstrap CSS link -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
  <!-- Common header and navigation -->
  <header>
    <!-- Your common header content here -->
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#"><h1>Welcome to CareerConnect</h1></a>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <!-- Home link -->
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: "nav-link" %>
          </li>

          <% if user_signed_in? %>
            <!-- User is signed in, show appropriate links -->
            <% if can? :create, JobSeeker %>
              <li class="nav-item">
                <%= link_to 'Create Job Seeker Profile', new_job_seeker_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Display Job Listings', display_path, class: "nav-link" %>
              </li>
            <% end %>

            <% if can? :create, CompanyProfile %>
              <li class="nav-item">
                <%= link_to 'Create Company Profile', new_company_profile_path, class: "nav-link" %>
              </li>
            <% end %>

            <!-- Edit Profile link -->
            <!-- Sign Out link -->
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete,
                data: { turbo_method: :delete, turbo_frame: 'body' }, class: "nav-link" %>
            </li>
          <% else %>
            <!-- User is not signed in, show sign-up link -->
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %>
            </li>
            <!-- Add an admin signup link -->
            <% if admin_signed_in? %>
               <li class="nav-item">
              <%= link_to 'SignOutAdmin', destroy_admin_session_path, method: :delete,
                data: { turbo_method: :delete, turbo_frame: 'body' }, class: "nav-link" %>
            </li>
            <% else %>
            <li class="nav-item"> 
              <%= link_to 'Admin Login', new_admin_session_path, class: "nav-link" %>

            
            </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
  
  <!-- Job Seeker-specific content -->
  <div class="container mt-5 flex-grow-1">
    <%= yield %>
  </div>

  <!-- Common footer -->
  <footer class="bg-dark text-light text-center py-3 mt-auto">
    <!-- Your footer content here -->
    &copy; 2023 CareerConnect
  </footer>
</body>
</html>
