

<!DOCTYPE html>
<html>
<head>
  <!-- Include your CSS and JavaScript here -->
  <title>Job Seeker - CareerConnect</title>
  
  <!-- Add your CSS and JavaScript links or references here -->
  <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
</head>
<body>
  <!-- Common header and navigation -->
  <header>
    <!-- Your common header content here -->
    
    <nav>
      <ul>
        <!-- Home link -->
        <li><%= link_to 'Home', root_path %></li>

        <!-- Job Postings link -->
      <h1>Welcome to CareerConnect</h1>

      <% if can? :create, JobSeeker %>
        <%= link_to 'Create Job Seeker Profile', new_job_seeker_path %>
        <%= link_to 'Display Job Listings', display_path %>


         
      <% end %>

      <% if can? :create, CompanyProfile %>
        <%= link_to 'Create Company Profile', new_company_profile_path %>
        
      <% end %>

        
        <!-- Edit Profile link -->
       
        <!-- Sign Out link -->
        <li>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete,
    data: { turbo_method: :delete, turbo_frame: 'body' } %>
</li>

      </ul>
    </nav>
  </header>
  
  <!-- Job Seeker-specific content -->
  <div class="job-seeker-content">
    <%= yield %>
  </div>

  <!-- Common footer -->
  <footer>
    <!-- Your footer content here -->
  </footer>
</body>
</html>
