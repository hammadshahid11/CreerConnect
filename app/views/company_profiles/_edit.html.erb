<!-- app/views/company_profiles/edit.html.erb -->



<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">Modal title</h4>
</div>
<div class="modal-body">
  *Modal content comes here*
  <div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Edit Company Profile</h1>

      <%= form_for @company_profile, url: company_profile_path(@company_profile), method: :patch, html: { class: 'form' } do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

       

        <div class="form-group">
          <%= f.label :bio %>
          <%= f.text_area :bio, class: 'form-control' %>
        </div>

        <div class="text-center">
          <%= f.submit "Update Profile", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= link_to "Back to Profile", company_profile_path(@company_profile), class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
</div>
<div class="modal-footer">
  <button class="btn btn-primary">Save</button>
</div>