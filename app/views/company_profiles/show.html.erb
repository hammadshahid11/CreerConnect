<!-- app/views/company_profiles/show.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Company Profile</h1>

          <p><strong>Name:</strong> <%= @company_profile.name %> </p>
          <p><strong>Bio:</strong> <%= @company_profile.bio %></p>
        
          <%= link_to "Back to JobPostings", display_path, class: "btn btn-secondary" %>
          <%= link_to 'Edit Company Profile', edit_company_profile_path(current_user.company_profile), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#EditCompanymodal-window', class: 'btn btn-primary'} %>
                   <div id="EditCompanymodal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content"></div>
                    </div>
                  </div>
                  <br/>
          <%= link_to "Create New Job Posting", new_company_profile_job_posting_path(@company_profile.id),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#NewJobPostingmodal-window', class: 'btn btn-primary' ,style: 'margin-top:10px'} %>
          <div id="NewJobPostingmodal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content"></div>
                    </div>
                  </div>
          <%= link_to "View Job Posting", company_profile_job_postings_path(@company_profile), class: "btn btn-primary" ,style: 'margin-top:10px'%>

        </div>
      </div>
    </div>
  </div>
</div>