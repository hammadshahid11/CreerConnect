<!-- app/views/company_profiles/new.html.erb -->


<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">Modal title</h4>
</div>
<div class="modal-body">
  *Modal content comes here*
  <div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4">Create Company Profile</h1>
      <%= form_with(model: @company_profile, local: true) do |form| %>
        <% if @company_profile.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@company_profile.errors.count, "error") %> prohibited this profile from being saved:</h4>
            <ul>
              <% @company_profile.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
          <small class="text-muted">Enter your company name (required).</small>
        </div>

     

        <div class="mb-3">
          <%= form.label :bio, class: "form-label" %>
          <%= form.text_area :bio, class: "form-control", id: "bio-textarea" %>
          <small class="text-muted">
            Enter a brief bio (maximum 500 characters). Character count: <span id="char-count">0</span>
          </small>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit "Create Profile", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "Back to Profiles", company_profiles_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>

</div>
<div class="modal-footer">
  <button class="btn btn-primary">Save</button>
</div>

<script>
  const bioTextarea = document.getElementById('bio-textarea');
  const charCount = document.getElementById('char-count');

  bioTextarea.addEventListener('input', function() {
    const chars = this.value.length;
    charCount.textContent = chars;
  });
</script>
