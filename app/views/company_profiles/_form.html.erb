<%= form_with(model: @company_profile, url: @company_profile.new_record? ? company_profiles_path : company_profile_path, method: @company_profile.new_record? ? :post : :patch) do |form| %>

  <%= form.label :first_name %>
  <%= form.text_field :first_name %>

  <%= form.label :last_name %>
  <%= form.text_field :last_name %>

  <%= form.label :bio %>
  <%= form.text_area :bio %>

  <%= form.submit 'Cr' %>
<% end %>
