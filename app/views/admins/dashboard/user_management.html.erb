<div class="container mt-4">
  <h2>User Management</h2>

  <!-- Display User Management Table -->
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <!-- Table Header -->
      <!-- ... (user table header) ... -->
      <thead class="thead-dark">
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>

      </thead>
      <tbody>
        <!-- User Rows -->
        <% @users.each do |user| %>
          <!-- ... (user table rows) ... -->
           <tr>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <div class="btn-group" role="group">
                <% if user.blocked? %>
                  <%= button_to 'Unblock', unblock_user_admins_dashboard_index_path(user.id), method: :post, class: "btn btn-success btn-sm", data: { confirm: 'Unblock this user?' } %>
                <% else %>
                  <%= button_to 'Block', block_user_admins_dashboard_index_path(user.id), method: :post, class: "btn btn-danger btn-sm", data: { confirm: 'Block this user?' } %>
                <% end %>
                <%= button_to 'Delete', delete_user_admins_dashboard_index_path(user.id), method: :post, class: "btn btn-danger btn-sm", data: { confirm: 'Delete this user?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Links for Reviewing and Moderating Job Listings and Monitoring Site Activity -->
  <div class="mt-4">
    <h3>Site Management</h3>
    <div>
      <!-- ... (site management links) ... -->
    </div>
  </div>

  <!-- Display Pending Job Listings if Available -->
  <% if @job_postings.any? %>
    <div class="mt-4">
      <h3>Pending Job Listings</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <!-- Table Header -->
          <thead class="thead-dark">
            <tr>
              <th>Title</th>
              <!-- Add more job listing attributes here -->
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
          <!-- Pending Job Listing Rows -->
            <% @job_postings.each do |job_posting| %>
              <tr>
                <td><%= job_posting.title %></td>
                <!-- Add more job listing attributes here -->
                <td>
                  <%= button_to 'Approve', approve_job_listing_admins_dashboard_path(job_posting.id), method: :post, class: "btn btn-success btn-sm", data: { confirm: 'Approve this job listing?' } %>
                  <%= button_to 'Disapprove', disapprove_job_listing_admins_dashboard_path(job_posting.id), method: :post, class: "btn btn-danger btn-sm", data: { confirm: 'Disapprove this job listing?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <p>No pending job listings available.</p>
  <% end %>
</div>
