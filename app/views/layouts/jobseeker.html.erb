<!DOCTYPE html>
<html>
<head>
  <!-- Include your CSS and JavaScript here -->
  <title>Job Seeker - CareerConnect</title>
  
  <!-- Add your CSS and JavaScript links or references here -->
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body>
  <!-- Common header and navigation -->
  <header>
    <!-- Your common header content here -->
    <nav>
      <ul>
        <!-- Home link -->
        <li><%= link_to 'Home', root_path %></li>

        <!-- Job Postings link -->

        <!-- Sign Out link -->
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      </ul>
    </nav>
  </header>
  
  <!-- Job Seeker-specific content -->
  <div class="job-seeker-content">
    <%= yield %>
  </div>

  <!-- Modals for creating and editing job seeker profiles -->
  <!-- Create Job Seeker Modal -->
  <div class="modal fade" id="createJobSeekerModal" tabindex="-1" role="dialog" aria-labelledby="createJobSeekerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <!-- Modal content for creating job seeker goes here -->
      </div>
    </div>
  </div>

  <!-- Edit Job Seeker Modal -->
  <div class="modal fade" id="editJobSeekerModal" tabindex="-1" role="dialog" aria-labelledby="editJobSeekerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <!-- Modal content for editing job seeker goes here -->
      </div>
    </div>
  </div>

  <!-- Common footer -->
  <footer>
    <!-- Your footer content here -->
  </footer>
</body>
</html>
